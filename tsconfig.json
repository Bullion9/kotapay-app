{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noErrorTruncation": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "types": []
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    "dist",
    "babel.config.js",
    "metro.config.js",
    ".tsbuildinfo"
  ]
}
