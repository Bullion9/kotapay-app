# KotaPay Environment Configuration
# Copy this file to .env.local and update with your actual values

# ===========================================
# BACKEND API CONFIGURATION
# ===========================================
# Your backend server URL (update this based on your setup)
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_BACKEND_HEALTH=http://localhost:3000/health

# For Android emulator, use:
# EXPO_PUBLIC_API_URL=http://10.0.2.2:3000/api
# EXPO_PUBLIC_BACKEND_HEALTH=http://10.0.2.2:3000/health

# For real device testing, use your machine's IP address:
# EXPO_PUBLIC_API_URL=http://192.168.55.249:3000/api
# EXPO_PUBLIC_BACKEND_HEALTH=http://192.168.55.249:3000/health

# ===========================================
# APPWRITE CONFIGURATION
# ===========================================
# Appwrite endpoint (usually https://cloud.appwrite.io/v1)
EXPO_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Appwrite project ID (found in Appwrite console)
EXPO_PUBLIC_APPWRITE_PROJECT_ID=675b34f600151bb4bb8c

# Database ID (usually 'kotapay-db')
EXPO_PUBLIC_APPWRITE_DATABASE_ID=kotapay-db

# Collection IDs (created by setup-database.js)
EXPO_PUBLIC_APPWRITE_USER_COLLECTION_ID=users
EXPO_PUBLIC_APPWRITE_TRANSACTIONS_COLLECTION_ID=transactions
EXPO_PUBLIC_APPWRITE_KYC_COLLECTION_ID=kyc_documents
EXPO_PUBLIC_APPWRITE_PAYMENT_REQUESTS_COLLECTION_ID=payment_requests
EXPO_PUBLIC_APPWRITE_VIRTUAL_CARDS_COLLECTION_ID=virtual_cards
EXPO_PUBLIC_APPWRITE_BENEFICIARIES_COLLECTION_ID=beneficiaries
EXPO_PUBLIC_APPWRITE_SPLIT_BILLS_COLLECTION_ID=split_bills
EXPO_PUBLIC_APPWRITE_CHAT_THREADS_COLLECTION_ID=chat_threads
EXPO_PUBLIC_APPWRITE_CHAT_MESSAGES_COLLECTION_ID=chat_messages
EXPO_PUBLIC_APPWRITE_REVENUE_RECORDS_COLLECTION_ID=revenue_records
EXPO_PUBLIC_APPWRITE_SECURITY_EVENTS_COLLECTION_ID=security_events

# Appwrite Storage Bucket ID
EXPO_PUBLIC_APPWRITE_STORAGE_ID=default

# ===========================================
# PAYSTACK CONFIGURATION
# ===========================================
# Paystack public key (for frontend transactions)
EXPO_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Paystack API URL
EXPO_PUBLIC_PAYSTACK_API_URL=https://api.paystack.co

# ===========================================
# API CONFIGURATION
# ===========================================
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3
EXPO_PUBLIC_API_RETRY_DELAY=1000

# Rate Limiting
EXPO_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100
EXPO_PUBLIC_RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
EXPO_PUBLIC_DEBUG_API=true
EXPO_PUBLIC_DEBUG_APPWRITE=true
EXPO_PUBLIC_DEBUG_NOTIFICATIONS=true

# Environment
EXPO_PUBLIC_ENVIRONMENT=development

# ===========================================
# SECURITY
# ===========================================
# Enable security features
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_PIN_PROTECTION=true
EXPO_PUBLIC_SESSION_TIMEOUT=1800000
